<% include ../partials/header.ejs %>

<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>Editar Série <a href="/series" class="btn">Voltar</a></h2>
                <form method="post">
                    <div class="form-group">
                        <label for="name">Nome:</label>
                        <input type="text" name="name" id="name" class="form-control" placeholder="Digite o nome da série" autofocus value="<%- serie.name %>">
                        <% if(errors) { %>
                            <span class="badge badge-primary">Informe o nome da série</span>
                        <% } %>
                    </div>
                    <div class="form-group">
                        <label for="status">Situação</label>
                        <select class="form-control" id="status" name="status">
                            <% labels.forEach(label => { %>
                                <option value="<%- label.id %>" <% if(label.id === serie.status) { %> selected<% } %>><%- label.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</section>

<% include ../partials/footer.ejs %>