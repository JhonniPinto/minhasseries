<% include ../partials/header.ejs %>

<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>Séries</h2>
                <p class="lead">Todas as séries cadastradas <a href="/series/nova" class="btn">Nova série</a></p>
                <table class="table table-striped table-hover table-bordered">
                    <tr>
                        <th>Nome</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                    <% series.forEach(serie => { %>
                        <tr>
                            <td><a href="/series/info/<%- serie._id %>"><%- serie.name %></a></td>
                            <td><span class="badge badge-secondary"><%- serie.status === 'to-watch' ? 'Para assistir' : serie.status === 'watched' ? 'Assistido' : 'Assistindo' %></span></td>
                            <td>
                                <a href="/series/editar/<%- serie._id %>">Editar</a> |
                                <a href="/series/excluir/<%- serie._id %>">Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </table>
            </div>
        </div>
    </div>
</section>

<% include ../partials/footer.ejs %>